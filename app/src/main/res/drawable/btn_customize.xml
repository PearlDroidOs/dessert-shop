<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorBlueDark2" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#08A9A9"
                android:endColor="@color/colorBlueDark"
                android:angle="270" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>